<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<environments default="quest1">

		<environment id="quest1">
			<transactionManager type="MANAGED"></transactionManager>
			<dataSource type="UNPOOLED">
				<property name="username" value="root" />
				<property name="password" value="mysql" />
				<property name="url" value="jdbc:mysql://127.0.0.1/quest1_db" />
				<property name="driver" value="com.mysql.jdbc.Driver" />
			</dataSource>
		</environment>

		<environment id="quest2">
			<transactionManager type="MANAGED"></transactionManager>
			<dataSource type="UNPOOLED">
				<property name="username" value="root" />
				<property name="password" value="mysql" />
				<property name="url" value="jdbc:mysql://127.0.0.1/quest2_db" />
				<property name="driver" value="com.mysql.jdbc.Driver" />
			</dataSource>
		</environment>

	</environments>


	<mappers>
		<mapper resource="mapper/Addr1Mapper" />
		<mapper resource="mapper/Addr2Mapper" />
		<mapper resource="mapper/ApplyMapper" />
		<mapper resource="mapper/BoardMapper" />
		<mapper resource="mapper/BookmarkMapper" />
		<mapper resource="mapper/CommentMapper" />
		<mapper resource="mapper/PoliceMapper" />
		<mapper resource="mapper/ScoreMapper" />
		<mapper resource="mapper/UserMapper" />
	</mappers>

</configuration>
